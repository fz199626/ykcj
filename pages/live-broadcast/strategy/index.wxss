/* pages/live-broadcast/strategy/index.wxss */
.container{
  height: 100%;
}
.strategy-btn{
  margin: auto;
  background: #fff;
  text-align: center;
  height: 44px;
  line-height: 44px;
}
.btn-left{
  padding: 2px 5px;
  border: 1px solid #999;
  border-top-left-radius: 4px;
  border-bottom-left-radius: 4px;
  border-right: 0;
}
.btn-right{
  padding: 2px 5px;
  border: 1px solid #999;
  border-top-right-radius: 4px;
  border-bottom-right-radius: 4px;
  border-left: 0;
}
.btn-select{
  background: #999;
  color: #fff;
}
.content{
  padding: 10px;
  height: calc(100% - 108px);
  overflow: auto;
}
.strategy{
  background: #fff;
  padding: 15px;
  border-radius: 5px;
  color: #666;
  margin-bottom: 15px;
}
.strategy:last-child{
  margin-bottom: 0;
}
.strategy-top{
  display: flex;
  justify-content: space-between;
}
.strategy-title{
  font-size: 18px;
  position: relative;
}
.strategy-title text{
  font-size: 12px;
  color: #fff;
  padding: 1px 4px;
  position: relative;
  top: -2px;
}
.buy{
  background: green;
}
.sell{
  background: #ff6428;
}
.strategy-time{
  font-size: 12px;
  color: #999;
}
.strategy-content{
  display: flex;
  flex-wrap: wrap;
  margin: 5px 0;
}
.strategy-content view{
  width: 50%;
  margin: 3px 0;
}
.strategy-content text{
  margin-left: 10px;
  font-size: 14px;
}
.red{
  color: red
}
.green{
  color: green
}
.strategy-bottom text{
  margin-left: 10px;
  color: #333;
  font-size: 14px;
}
.no-strategy{
  text-align: center;
  color: #999;
  line-height: 200px;
}
