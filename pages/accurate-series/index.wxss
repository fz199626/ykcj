/* pages/accurate-series/index.wxss */
.dropdown-menu{
  position: fixed;
  top: 0;
  right: 0;
  left: 0;
  z-index: 99;
}
.column-list{
  padding: 10px;
  margin-top: 50px;
}
.curriculum{
  display: flex;
}
.curriculum-left{
  width: 48%;
  margin-right: 2%;
  font-size: 0;
  position: relative;
}
.watched{
  position: absolute;
  bottom: 3px;
  left: 3px;
  font-size: 12px;
  color: #fff;
}
.watched van-icon{
  position: relative;
  top: 2px;
  margin-right: 2px;
}
.curriculum-right{
  flex: 1;
}
.curriculum-right-top{
  height: 80px;
}
.curriculum-title{
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
  text-overflow: ellipsis;
  font-size: 15px;
}
.label text{
  background: #ccc;
  margin: 0 2px;
  font-size: 10px;
  border-radius: 4px;
  padding: 1px 5px;
  color: #fff;
  background: #ff6428;
}
.curriculum-time{
  height: 20px;
  color: #999;
  font-size: 12px;
}