/* pages/accurate-series/details/index.wxss */
.container{
  height: 100%;
}
.head{
  background: #fff;
}
.head video,.head image{
  width: 100%;
  height: 210px;
}
.head-bottom{
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 5px 10px 7px;
}
.head-bottom-title{
  font-size: 16px;
  width: 240px;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.head-bottom-time{
  color: #ccc;
  font-size: 14px;
  margin-top: 2px;
}
.head-bottom-right{
  color: #fff;
  font-size: 12px;
  display: flex;
  justify-content: space-between;
}
.collect{
  background: #ccc;
  margin: 0 3px;
  padding: 2px 10px;
  border-radius: 10px;
}
.share::after {
  border: none;
}
.share{
  color: #fff;
  background: #ff6428;
  font-size: 12px;
  margin: 0 3px;
  padding: 2px 10px;
  border-radius: 10px;
  line-height: 17px;
}
.content{
  padding: 10px;
  height: calc(100% - 285px);
  overflow: auto;
}
.title{
  border-left: 3px solid #ff6428;
  padding-left: 5px;
  font-weight: bold;
  font-size: 16px;
}
.curriculum{
  display: flex;
}
.curriculum-left{
  width: 48%;
  margin-right: 2%;
  font-size: 0;
  position: relative;
}
.watched{
  position: absolute;
  bottom: 3px;
  left: 3px;
  font-size: 12px;
  color: #fff;
}
.watched van-icon{
  position: relative;
  top: 2px;
  margin-right: 2px;
}
.curriculum-right{
  flex: 1;
}
.curriculum-right-top{
  height: 80px;
}
.curriculum-title{
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
  text-overflow: ellipsis;
  font-size: 15px;
}
.label text{
  background: #ccc;
  margin: 0 2px;
  font-size: 10px;
  border-radius: 4px;
  padding: 1px 5px;
  color: #fff;
  background: #ff6428;
}
.curriculum-time{
  height: 20px;
  color: #999;
  font-size: 12px;
}