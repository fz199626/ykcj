/* pages/login/index.wxss */
.container{
  background: #fff;
  height: 100%;
}
.content{
  text-align: center;
  width: 90%;
  margin: auto;
}
image{
  margin: auto;
}
.logo{
  padding-top: 50px;
}
.logo image{
  width: 100px;
  height: 100px;
}
.icon-title image{
  width: 200px;
}
.login{
  margin: 25px 0;
}
.btns{
  display: flex;
  justify-content: space-between;
}
.btn{
  margin: 40px auto 15px;
  color: #fff;
  background: #ff6428;
  border-radius: 25px;
  width: 45%;
}
.cancel{
  background: #666;
  opacity: .2;
}
.btn[disabled]{
  color:#fff !important;
  background: #ffae98 !important;
}
.other{
  width: 90%;
  margin: auto;
  display: flex;
  justify-content: space-between;
  font-size: 12px;
  color: #005d93;
}
.other navigator{
  text-decoration: underline;
}
.tips{
  color: #999;
}
.group{
  position: relative;
  font-size: 16px;
}
.getPhoneNumber{
  position: absolute;
  top: 0;
  width: 300px;
  height: 48px;
  background: rgba(0, 0, 0, 0);
  border: 0;
  z-index: 99;
}
.getPhoneNumber::after{
  border: 0;
}
